    <munit:validation>
      <munit-tools:assert-that message="The HTTP Status code is not correct!" expression="#[attributes.statusCode]" is="#[MunitTools::equalTo(200)]" />
      <munit-tools:assert-that message="The response payload is not correct!" expression="#[payload]" is="#[MunitTools::notNullValue()]" />
    </munit:validation>
  </munit:test>
</mule>
